---
const { title, pageClass = "" } = Astro.props;
---

<html lang="en" class={pageClass}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@0.7.5/dist/leaflet.css"
    />
    <script defer src="https://unpkg.com/leaflet@0.7.5/dist/leaflet.js"
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>
